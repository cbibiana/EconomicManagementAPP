@model  IEnumerable<Transactions>
@{
    ViewData["Title"] = "Transactions";
}

<h1>Transactions</h1>



<a asp-action="Create" class="btn btn-primary mb-3">Create Transactions</a>

<table class="table">
    <thead>
        <tr>
            <th>Actions</th>
            <th>Description</th>
            <th>Total</th>
        </tr>
    </thead>
    
        @foreach (var transactions in Model ) 
        {
            <tr>
                <td>
                    <input type="hidden" value="@transactions.Id" class="ids" />
                    <a class="btn btn-primary" asp-action="Modify" asp-route-id="@transactions.Id">Modify</a>
                </td>
                <td>
                    @transactions.Description
                </td>
                 <td>
                    @transactions.Total
                </td>

            </tr>
        }
</table>

