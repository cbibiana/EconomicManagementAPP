@model TransactionsModifyViewModel
@{
    ViewData["Title"] = "Modify Transactions";
}

<h1>Modify Transactions</h1>
<h5>Transaction allow indicate expenditures income </h5>


<form asp-action="Modify">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
     <input type="hidden" asp-for="TotalPrevious" />
      <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="TransactionDate" class="form-label"></label>
        <input  asp-for="TransactionDate" class="form-control" />
        <span asp-validation-for="TransactionDate" class="text-danger"> </span>
    </div>
    <div class="mb-3">
        <label asp-for="AccountId" class="form-label"></label>
        <select asp-for="AccountId" asp-items="Model.Accounts" class="form-select"></select> 
        <span asp-validation-for="AccountId" class="text-danger"> </span>
    </div>
      <div class="mb-3">
        <label asp-for="OperationTypeId" class="form-label"></label>
        <select  asp-for="OperationTypeId" asp-items="Html.GetEnumSelectList<OperationTypes>()"
            class="form-select"></select> 
        <span asp-validation-for="OperationTypeId" class="text-danger"> </span>
    </div>
     <div class="mb-3">
        <label asp-for="CategoryId" class="form-label"></label>
        <select  asp-for="CategoryId"  class="form-select"></select> 
        <span asp-validation-for="CategoryId" class="text-danger"> </span>
    </div>
     <div class="mb-3">
        <label asp-for="Total" class="form-label"></label>
        <input  asp-for="Total" class="form-control" />
        <span asp-validation-for="Total" class="text-danger"> </span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea  asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"> </span>
    </div>
    <button type="submit" class="btn btn-primary">Modify</button>
     <button type="submit" class="btn btn-danger" asp-action="Delete">Delete</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
    <script src="~/js/FormTransactions.js" asp-append-version="true"></script>
    <script>
        const getCategoriesURL = '@Url.Action("getCategories")';

    $(function(){
        initializeFormTransactions(getCategoriesURL);
    })
    </script>
}